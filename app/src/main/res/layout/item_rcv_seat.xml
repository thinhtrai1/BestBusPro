<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:weightSum="5">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvSeat1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/margin_5"
        android:layout_marginTop="@dimen/margin_2.5"
        android:layout_marginBottom="@dimen/margin_7.5"
        android:layout_weight="2"
        app:cardCornerRadius="@dimen/margin_5"
        app:cardElevation="@dimen/margin_5">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvSeatName1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:fontFamily="monospace"
                android:gravity="center"
                android:lines="1"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:autoSizeMaxTextSize="20dp"
                app:autoSizeMinTextSize="5dp"
                app:autoSizeTextType="uniform"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintWidth_percent="0.5" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvSeat2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/margin_5"
        android:layout_marginTop="@dimen/margin_2.5"
        android:layout_marginBottom="@dimen/margin_7.5"
        android:layout_weight="2"
        app:cardCornerRadius="@dimen/margin_5"
        app:cardElevation="@dimen/margin_5">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvSeatName2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:fontFamily="monospace"
                android:gravity="center"
                android:lines="1"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:autoSizeMaxTextSize="20dp"
                app:autoSizeMinTextSize="5dp"
                app:autoSizeTextType="uniform"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintWidth_percent="0.5" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>